<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backs"
    android:orientation="vertical">

   <com.example.cuibowen.animation.BezierView.ProgressView
       android:id="@+id/progress"
       android:layout_width="match_parent"
       android:layout_height="200dp" />
   <com.example.cuibowen.animation.BezierView.TestView
       android:layout_width="match_parent"
       android:layout_height="100dp" />
   <com.example.cuibowen.animation.BezierView.RoundView
       android:layout_width="match_parent"
       android:layout_height="200dp" />
   <Button
       android:onClick="progress"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

</LinearLayout>
