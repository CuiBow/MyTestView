<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="143dp"
    android:layout_height="293dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/imageView"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/phone"
    />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/beijing"
                app:layout_constraintBottom_toBottomOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline6"
                app:layout_constraintVertical_bias="1.0"
                />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline6"
                app:layout_constraintVertical_bias="1.0"
                android:scaleType="centerCrop"
                android:src="@drawable/zhezhao"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/saomiaoxianshi"
                app:layout_constraintBottom_toBottomOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="@id/guideline5"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toStartOf="@id/guideline6"
                app:layout_constraintTop_toBottomOf="@+id/guideline2"
                app:layout_constraintVertical_bias="0.5" />

            <com.example.cuibowen.animation.homeView.ScanView
                android:id="@+id/scan_view"
                android:layout_width="102dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@+id/guideline2"
                android:layout_marginTop="70dp"
                app:layout_constraintEnd_toEndOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline6"
                app:layout_constraintVertical_bias="1.0"
                android:scaleType="centerInside"

                />


            <RelativeLayout
                android:id="@+id/top_bottom_rel"
                app:layout_constraintBottom_toBottomOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/guideline5"
                app:layout_constraintStart_toStartOf="@id/guideline6"
                app:layout_constraintVertical_bias="1.0"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp">

                <ImageView
                    android:src="@drawable/clip_top"
                    android:layout_centerInParent="true"
                    android:id="@+id/top_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:src="@drawable/clip_bottom"
                    android:layout_centerInParent="true"
                    android:id="@+id/bottom_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </RelativeLayout>

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="35dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="245dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="18dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="7dp" />




</android.support.constraint.ConstraintLayout>