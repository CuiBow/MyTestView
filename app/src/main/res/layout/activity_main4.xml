<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.cuibowen.animation.scan.Main4Activity">


<RelativeLayout
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/sun"
            android:layout_centerInParent="true"
            android:src="@drawable/suns"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <com.example.cuibowen.animation.homeView.ScanView
            android:visibility="gone"
            android:id="@+id/scan_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_goods"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/goods"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <com.example.cuibowen.animation.scan.ShimmerFrameLayout
            app:base_alpha="0.3"
            app:duration="1500"
            app:dropoff="0.8"
            android:id="@+id/searchs"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/sun"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">





        </com.example.cuibowen.animation.scan.ShimmerFrameLayout>
    <com.example.cuibowen.animation.shimmer.ShimmerView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:id="@+id/test"
        android:layout_height="wrap_content">

        <LinearLayout

            android:background="#fff"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_first_hosptial_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_home_hosp"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="北京有"
                android:textColor="#444444"
                android:textSize="15sp" />

            <TextView
                android:layout_toRightOf="@+id/tv_first_hosptial_num"
                android:layout_centerVertical="true"
                android:id="@+id/tv_caina_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="950"
                android:textColor="#f83d3d"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_toRightOf="@+id/tv_caina_num"
                android:layout_centerVertical="true"
                android:id="@+id/tv_last_hosptial_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="家医院正在使用"
                android:textColor="#444444"
                android:textSize="15sp" />

        </LinearLayout>
    </com.example.cuibowen.animation.shimmer.ShimmerView>

    </RelativeLayout>

    <com.example.cuibowen.animation.shimmer.ShimmerTextView
        android:drawableLeft="@mipmap/icon_home_hosp"
        android:id="@+id/shimmer_tv"
        android:text="asdasdasdasdasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#444"
        android:textSize="16sp"/>


</RelativeLayout>
</LinearLayout>
